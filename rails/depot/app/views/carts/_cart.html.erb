<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Progmatic Cart</h2>

  <table class="auto-class">

    <%= render cart.line_items %>
    
    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="3">Total:</th>
        <td class="text-right pt-2 font-bold border-t-2 border-black"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>

  <%= button_to 'Empty Cart', cart,
  method: :delete,
  class: 'ml-4 rounded-lg px-2 py-1 text-white bg-green-600'
%>
</div>

